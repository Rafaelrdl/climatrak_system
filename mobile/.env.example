# ClimaTrak Mobile Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
# In development, use your local machine IP (not localhost for emulator)
# Example: http://192.168.1.100:8000 or http://10.0.2.2:8000 (Android emulator)
API_BASE_DOMAIN=localhost:8000

# Default tenant for development (optional, user will select via email)
DEFAULT_TENANT=umc

# Environment (development | staging | production)
ENVIRONMENT=development

# Enable debug logging
DEBUG=true
